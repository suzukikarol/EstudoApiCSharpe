@model IEnumerable<SistemaEstoque.Models.Produto>

@{
    ViewBag.Title = "Produtos Cadastrados";

   
    if (Session["userId"] == null)
    {
        Response.Redirect("~/Account/Login");
    }
}

<h2>Lista de Produtos</h2>

<p>
    @Html.ActionLink("Cadastrar outro produto", "AdicionarOuEditar","Produto")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdProduto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.ActionLink("Edit", "AdicionarOuEditar", new { id = item.IdProduto }) |
            @Html.ActionLink("Details", "VerTodosProdutos", new { id = item.IdProduto }) |
            @Html.ActionLink("Delete", "DeletarProduto", new { id = item.IdProduto })
        </td>
    </tr>
}

</table>
